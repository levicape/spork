{
	"name": "iac_stacks_bootstrap",
	"description": "Template for new Pulumi stacks",
	"config": {
		"packagemanager": "pnpm",
		"packageexecutor": "pnpm exec"
	},
	"nx": {
		"targets": {
			"nx:compile": {
				"dependsOn": ["iac_stacks:nx:compile"]
			},
			"dx:precommit": {
				"dependsOn": []
			}
		}
	},
	"scripts": {
		"compile": "$npm_package_config_packageexecutor nx nx:compile",
		"preview": "$npm_package_config_packageexecutor nx px:preview"
	}
}
