{
  "files": {
    "ignore": [
      "package.json",
      "package-lock.json",
      "**/package.json",
      "**/package-lock.json",
      "src/_protocols/**/*"
    ]
  },  
  "linter": {
    "rules": {
      "suspicious": {
        "noUnsafeDeclarationMerging": "off",
        "noControlCharactersInRegex": "off",
        "noAssignInExpressions": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noParameterAssign": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      }
    }
  }
}