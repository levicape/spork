{
  "name": "@levicape/protobuf-spork-stands",
  "config": {
    "packagemanager": "pnpm",
    "packageexecutor": "corepack pnpm exec",
    "outpaths": "./gen"
  },
  "dependencies": {
    "@bufbuild/buf": "catalog:protobuf",
    "@bufbuild/protobuf": "catalog:protobuf",
    "ts-proto": "catalog:protobuf",
    "typescript": "catalog:dev"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "ci": "catalog:package",
    "publint": "catalog:package",
    "syncpack": "catalog:package"
  },
  "nx": {
    "targets": {
      "dx:precommit": {
        "dependsOn": [
          "dx:prepublish"
        ]
      },
      "nx:compile": {
        "dependsOn": [
          "wait"
        ]
      },
      "nx:lint": {
        "dependsOn": [
          "protobuf:lint"
        ]
      },
      "nx:test": {
        "dependsOn": [
          "test:output"
        ]
      }
    }
  },
  "private": true,
  "scripts": {
    "build": "$npm_package_config_packageexecutor nx nx:compile --verbose",
    "clean": "rm -rf $npm_package_config_outpaths || true",
    "dx:lint": "$npm_package_config_packageexecutor nx build && $npm_package_config_packageexecutor nx exec -- protobuf:format && $npm_package_config_packageexecutor nx package:format",
    "dx:prepublish": "$npm_package_config_packageexecutor nx dx:prepublish:pre && $npm_package_config_packageexecutor nx dx:lint && $npm_package_config_packageexecutor nx prepublish",
    "dx:prepublish:pre": "echo \"Starting prepublish dx. This will compile the package, lint it, format package.json and verify it. \"",
    "generate": "$npm_package_config_packageexecutor nx exec -- buf generate",
    "lint": "$npm_package_config_packageexecutor nx nx:lint",
    "package:deps": "$npm_package_config_packageexecutor nx exec -- depcheck",
    "package:fix": "$npm_package_config_packageexecutor nx exec -- syncpack fix-mismatches",
    "package:format": "$npm_package_config_packageexecutor nx exec -- syncpack format",
    "package:update": "$npm_package_config_packageexecutor nx exec -- syncpack update",
    "pregenerate": "$npm_package_config_packageexecutor nx clean",
    "prepublish": "$npm_package_config_packageexecutor nx exec -- publint --strict",
    "protobuf:format": "$npm_package_config_packageexecutor nx exec -- buf format -w",
    "protobuf:lint": "echo 'buf lint'; # $npm_package_config_packageexecutor nx exec -- buf lint",
    "test": "$npm_package_config_packageexecutor nx nx:test",
    "test:output": "test -d $npm_package_config_outpaths",
    "wait": "sleep 2 # This package is compiled by the parent package"
  },
  "type": "module"
}
