{
	"files": {
		"ignore": [
			"**/module",
			"package.json",
			"package-lock.json",
			"**/package.json",
			"**/package-lock.json"
		]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off",
				"noUnsafeDeclarationMerging": "off",
				"noControlCharactersInRegex": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noParameterAssign": "off",
				"useConst": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off",
				"noBannedTypes": "off",
				"useLiteralKeys": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	}
}
